#!/bin/bash

if [[ ! -e docker-compose.yml ]]; then
    echo "Missing ocker-compose.yml"
    exit
fi

if [[ $1 != "" ]]; then
    echo "[INFO] Power off service $1 ?"
    echo "Please type yes or no and Press [Enter]: "
    read  OP
else
    echo "[INFO] Power off all services ?"
    echo "Please type yes or no and Press [Enter]: "
    read  OP
fi

if [[ $OP == "yes" ]]; then
    docker-compose stop $1
fi

echo "Off Finished"
exit

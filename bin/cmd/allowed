#!/bin/bash

echo ""
echo "Allowed is Running"
echo ""

if [[ $1 == "-y" ]]; then
    OP="yes"
else
    echo "[WARNING] Allowed all permissions on folders nobody:nogroup and 777"
    echo "Continue? Please type yes or no and Press [Enter]: "
    read  OP
fi

if [[ $OP == "yes" ]]; then

    echo -ne "Running - "
    sudo chmod 777 * -R
    sudo chmod 777 .* -R
    sudo chown nobody:nogroup * -R
    sudo chown nobody:nogroup .* -R
    echo -ne "DONE\n"
fi

echo ""
echo "Allowed Finished"
echo ""
exit

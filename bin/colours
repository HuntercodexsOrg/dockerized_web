#!/bin/bash

# CLOSE TAG COLORS
COLOR_CLOSE="\033[0m"

# TEXT COLORS
DEFAULT_TEXT_COLOR="\033[0m"
BLACK_TEXT_COLOR="\033[0;30m"
RED_TEXT_COLOR="\033[0;31m"
GREEN_TEXT_COLOR="\033[0;32m"
NARROW_TEXT_COLOR="\033[0;33m"
BLUE_TEXT_COLOR="\033[0;34m"
PURPLE_TEXT_COLOR="\033[0;35m"
CYAN_TEXT_COLOR="\033[0;36m"
SILVER_TEXT_COLOR="\033[0;37m"
BLACK_SILVER_TEXT_COLOR="\033[1;30m"
RED_CLEAR_TEXT_COLOR="\033[1;31m"
GREEN_CLEAR_TEXT_COLOR="\033[1;32m"
YELLOW_TEXT_COLOR="\033[1;33m"
BLUE_CLEAR_TEXT_COLOR="\033[1;34m"
PURPLE_CLEAR_TEXT_COLOR="\033[1;35m"
CYAN_CLEAR_TEXT_COLOR="\033[1;36m"
WHITE_TEXT_COLOR="\033[1;37m"

# BACKGROUND COLORS
BACK_BLACK_COLOR="\033[40;1;37m"
BACK_RED_COLOR="\033[41;1;37m"
BACK_GREEN_COLOR="\033[42;1;37m"
BACK_NARROW_COLOR="\033[43;1;37m"
BACK_BLUE_COLOR="\033[44;1;37m"
BACK_PURPLE_COLOR="\033[45;1;37m"
BACK_CYAN_COLOR="\033[46;1;37m"
BACK_SILVER_COLOR="\033[47;1;37m"

# TEXT EFFECTS
UNDERLINED="\033[4;30m"
BLINKING="\033[5;30m"
INVERT="\033[7;30m"
HIDDEN="\033[8;30m"
